unit uBtnSecondary.TypeButton.Model;

interface

uses uITypeButton, Vcl.Graphics, Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls;

type
  TBtnSecondary = class(TInterfacedObject, iTypeButton)
  private
    FPainel1 : TPanel;
    FPainel2 : TPanel;
    procedure Enter(sender: TObject);
    procedure Leave(sender: TObject);
    function MouseEnter(Painel1, Painel2 : TPanel) : tNotifyEvent;
    function MouseLeave(Painel1, Painel2 : TPanel) : tNotifyEvent;
    function ColorDefaultBord : TColor;
    function ColorDefaultBackground : TColor;
  public
    procedure ApplyAnimation(PainelBtn, PainelBorda : TPanel);
    class function New : ITypeButton;
  end;

implementation

{ TBtnPrimary }

procedure TBtnSecondary.ApplyAnimation(PainelBtn, PainelBorda: TPanel);
begin
  PainelBorda.Color    := ColorDefaultBord;
  PainelBtn.Color      := ColorDefaultBackground;
  PainelBtn.Font.Color := ColorDefaultBord;

  PainelBtn.OnMouseEnter := MouseEnter(PainelBtn, PainelBorda);
  PainelBtn.OnMouseLeave := MouseLeave(PainelBtn, PainelBorda);
end;

function TBtnSecondary.ColorDefaultBackground: TColor;
begin
  Result := $00FFFFFF;
end;

function TBtnSecondary.ColorDefaultBord: TColor;
begin
  Result := $00959391;
end;

procedure TBtnSecondary.Enter(sender: TObject);
begin
  FPainel1.Color      := $00959391;
  FPainel1.Font.Color := $00FFFFFF;
  FPainel2.Color      := $00959391;
end;

procedure TBtnSecondary.Leave(sender: TObject);
begin
  FPainel1.Color      := $00FFFFFF;
  FPainel1.Font.Color := $00959391;
  FPainel2.Color      := $00959391;
end;

function TBtnSecondary.MouseEnter(Painel1, Painel2: TPanel): tNotifyEvent;
begin
  FPainel1 := Painel1;
  FPainel2 := Painel2;
  Result   := Enter;
end;

function TBtnSecondary.MouseLeave(Painel1, Painel2: TPanel): tNotifyEvent;
begin
  FPainel1 := Painel1;
  FPainel2 := Painel2;
  Result   := Leave;
end;

class function TBtnSecondary.New: ITypeButton;
begin
  Result := Self.Create;
end;

end.

